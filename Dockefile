# Use an official Python runtime as a parent image
FROM python:3.11-slim-buster

# Set the working directory to /app
WORKDIR /

# Copy the dependencies file to the working directory
COPY pyproject.toml poetry.lock /app/

# Install Poetry
RUN curl -sSL https://raw.githubusercontent.com/python-poetry/poetry/master/get-poetry.py | python -

# Install the app dependencies with Poetry
RUN poetry install --no-root --no-interaction --no-ansi

# Copy the rest of the app code to the working directory
COPY . /app

# Expose port 8080 for the Scrapy project
EXPOSE 8080

# Set environment variables for Scrapy
ENV PYTHONUNBUFFERED=1
ENV SCRAPY_PROJECT=myproject

# Set the default command to run the Scrapy spider
CMD ["poetry", "run", "python", "start_runner", "--runner-name","docker-run"]